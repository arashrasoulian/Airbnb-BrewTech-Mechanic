<div class="best-option-container m-5">
  <h3><i>best options for you:</i></h3>
  <div class="row mt-4">
    <% @cheapest_flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-cheapest">
          <div class="flat-image">
            <% if flat.photo.attached? %>
              <%= cl_image_tag flat.photo.key, crop: :fill, style: "width: 325px; height: 180px;" %>
            <% else %>
              <%= image_tag "no_image.jpeg", style: "width: 100px; height: 150px;" %>
            <% end %>
          </div>
          <div class="flat-info m-4">
            <h3><%= flat.name %></h3>
            <%= flat.address %>
            <%= flat.city %>
            <div class="mt-4 ">
              <%= flat.price %>
              <span> <%= image_tag "currency-euro.svg", style:"height:20px;" %></span>
              <%= link_to "Show", flat_path(flat), class:"float-end mx-2" %>
            </div>
            <div class="rating mt-3">
              <% 5.times do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gold" class="bi bi-star-fill" viewBox="0 0 16 16">
                <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  </div>
</div>
